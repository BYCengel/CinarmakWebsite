@model UserEditViewModel

<h1 class="h3">Edit User</h1>
<hr />

<form asp-controller="Admin" asp-action="UserEdit" method="POST">
	<div class="row">
		<div class="col-md-12">
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8">
			<input type="hidden" name="UserId" value="@Model.UserId" />
			<div class="mb-3">
				<label asp-for="FirstName" class="form-label"></label>
				<input class="form-control" asp-for="FirstName">
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="LastName" class="form-label"></label>
				<input class="form-control" asp-for="LastName">
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="UserName" class="form-label"></label>
				<input class="form-control" asp-for="UserName">
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input class="form-control" asp-for="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-primary">Save Changes</button>
		</div>
		<div class="col-md-4">
			@foreach (var roleName in ViewBag.roleNames)
			{
				<div class="input-group mb-3">
					<input type="checkbox" class="form-check-input mt-0" id="@roleName" value="@roleName" name="selectedRoles">
					<div class="input-group-text">
						<input type="checkbox" class="form-check-input mt-0" id="@roleName" value="@roleName" name="selectedRoles"
						   @(Model.SelectedRoles.Any(thisRole => thisRole == roleName)?"checked":"") />
					</div>
					<label type="text" class="form-control" for="@roleName">@roleName</label>
				</div>
			}
			<hr />
			<div class="input-group mb-3">
				<div class="input-group-text">
					<input asp-for="EmailConfirmed" class="form-check-input mt-0" type="checkbox" />
				</div>
				<label asp-for="EmailConfirmed" class="form-control"></label>
			</div>
		</div>
	</div>
</form>

@section  Scripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
