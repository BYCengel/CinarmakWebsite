@model IEnumerable<IdentityRole>

<div class="row">
	<div class="col-md-12">
		<h1 class="h3">Role List</h1>
		<hr />

		<a asp-controller="Admin" asp-action="RoleCreate" class="btn btn-primary btn-sm mr-2">Add Role</a>

		<table class="table table-bordered mt-3">
			<thead>
				<tr>
					<td style="width: 50px;">Id</td>
					<td stlye="width: 100px;">Role Name</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				@if (Model.Count() > 0)
				{
					@foreach (var role in Model)
					{
						<tr>
							<td>@role.Id</td>
							<td>@role.Name</td>

							<td>
								<a asp-controller="Admin" asp-action="RoleEdit" asp-route-roleId="@role.Id" class="btn btn-primary btn-sm mr-2">Edit Role</a>
								<form asp-controller="Admin" asp-action="DeleteRole" method="post" style="display: inline;">
									<input type="hidden" name="RoleId" value="@role.Id">
									<button type="submit" class="btn btn-danger">Delete Role</button>
								</form>
							</td>
						</tr>
					}
				}
				else
				{
					<div class="alert alert-warning">
						<h3>No Roles</h3>
					</div>
				}
			</tbody>
		</table>
	</div>
</div>

