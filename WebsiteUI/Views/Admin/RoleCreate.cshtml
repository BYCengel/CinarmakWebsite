@model RoleCreateViewModel

<h1 class="h3">Create Role</h1>
<hr />

<form asp-controller="Admin" asp-action="RoleCreate" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="mb-3">
		<label asp-for="@Model.RoleModel.RoleName" class="form-label"></label>
		<input asp-for="@Model.RoleModel.RoleName" class="form-control" />
		<span asp-validation-for="@Model.RoleModel.RoleName" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Save Role</button>
</form>